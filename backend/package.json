{
  "name": "fundly-backend",
  "version": "1.0.0",
  "description": "Automatic Raydium pool creation service for Fundly",
  "main": "raydium-pool-service.js",
  "scripts": {
    "test": "node test-setup.js",
    "start": "node raydium-pool-service.js",
    "pm2:start": "pm2 start raydium-pool-service.js --name pool-service",
    "pm2:stop": "pm2 stop pool-service",
    "pm2:restart": "pm2 restart pool-service",
    "pm2:logs": "pm2 logs pool-service",
    "pm2:delete": "pm2 delete pool-service"
  },
  "keywords": [
    "solana",
    "raydium",
    "dex",
    "pool",
    "automation"
  ],
